<div class="player">
	<a ng-click="playPause()" class="play-pause glyphicon" ng-class="isPlaying() ? 'glyphicon-pause' : 'glyphicon-play'"></a>
	<div class="episode-data">
	  <span class="show-name">
	    {{ showName() }}
	  </span>
	  <span class="episode-name">
	    {{ episodeName() }}
	  </span>
	</div>
</div>
<div class="source-selector">
	<div class="source-option" ng-class="{ 'selected-source': !stream_selected }" ng-click="handlePlayerToggle(false)">Random</div>
	<div class="source-option" ng-if="streamExists()" ng-class="{ 'selected-source': stream_selected }" ng-click="handlePlayerToggle(true)">On Air RN</div>
<!-- 	<a ng-click="handlePlayerToggle()">{{streamExists() ? "Switch to Live Stream" : "Play Random Episode"}}</a>
 --></div>
<audio id='audio-player' src='#' type='audio/mp3' preload='none'></audio>