<div class="shows row">
	<form class="search col-xs-12">
	  <input type='search' placeholder='show name' ng-model='query'>
	  <input type='submit' ng-click='search()'>
	</form>
	<div class="col-xs-12 col-sm-4" ng-repeat="show in shows">
		<div class="panel panel-default">
			<div class="panel-header">
				<img ng-src="{{ show.image_url }}" />
			</div>
			<div class="panel-body">
				<h2 class="show-name"><a ng-href="/#/shows/{{show.id}}">{{show.name}}</a></h2>
				<div class="show-description">{{ show.description }}</div></br>
				<p><a ng-href="/#/shows/{{show.id}}">View all episodes</a></p>
			</div>
		</div>
	</div>
</div>