@import "constants";


ba-player {
  display: flex;
  padding: 8px 0;
  margin-top: 30px;

  -ms-flex-align: center;
  -webkit-align-items: center;
  -webkit-box-align: center;
  align-items: center;

  .player {
    display: flex;

    -ms-flex-align: center;
    -webkit-align-items: center;
    -webkit-box-align: center;
    align-items: center;
  }


  .episode-data {
    display: inline-block;
    margin-left: 4px;

    .show-name {
      display: block;
      font-family: 'HKGrotesk Bold';
     // font-size: 16px;
      //line-height: 16px;
    }

    .episode-name {
      display: block;
      //font-size: 12px;
      //line-height: 22px;
    }
  }

  .play-pause {
    height: 32px;
    width: 32px;
    display: inline-block;
    font-size: 16px;
    line-height: 28px;
    padding-left: 2px;
    text-align: center;
    border-radius: 16px;
    -moz-border-radius: 16px;
    -webkit-border-radius: 16px;
    border: 2px black solid;
    color: black;
    text-decoration: none;
  }

  .source-selector {
    border: 2px solid $pink;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    border-radius: 4px;
    // margin-left: auto;
    margin-right: 1em;
    color: $pink;
    height: 32px;
    line-height: 32px;
    font-size: 1.125em;
    overflow: hidden;

    .source-option {
      display: inline-block;
      text-align: center;
      text-transform: uppercase;
      width: 7em;
      cursor: pointer;

      &:nth-child(2) {
        background: $pink;
        color: white;
      }
    }
  }

  .mejs-container {
    display: none;
  }
}

@media (max-width: 767px) {
  ba-player {
    display: block;
    margin-top: 0.5em;
  }
  .player {
    width: 100%;
  }
  .source-selector {
    display: inline-block;
    margin: 0.5em auto;
  }
}

@media (min-width: 768px) {
  .source-selector {
    margin-left: auto;
  }
}